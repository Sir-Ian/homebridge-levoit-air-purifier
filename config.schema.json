{
  "pluginAlias": "LevoitAirPurifiers",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Levoit Air Purifiers"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "description": "VeSync's account email."
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "VeSync's account password"
      },
      "appVersion": {
        "title": "App Version",
        "type": "string",
        "default": "5.6.70"
      },
      "os": {
        "title": "OS",
        "type": "string",
        "default": "Android 14; Pixel 7"
      },
      "clientType": {
        "title": "Client Type",
        "type": "string",
        "default": "Android"
      },
      "enableDebugMode": {
        "title": "Enable Debug Mode",
        "type": "boolean",
        "default": false,
        "description": "Enable verbose logging"
      },
      "experimentalFeatures": {
        "title": "Experimental Features",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Feature",
          "type": "string",
          "enum": ["DeviceDisplay", "Humidifiers"]
        }
      }
    }
  }
}
